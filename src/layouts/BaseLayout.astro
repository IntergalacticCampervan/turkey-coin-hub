---
import { APP_CHAIN_META } from '../lib/chain';

interface Props {
  title?: string;
}

const { title = 'Turkey Coin Hub' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <style>
      :root {
        color-scheme: light;
        --bg: #f4f7f5;
        --surface: #ffffff;
        --text: #122026;
        --muted: #4b6069;
        --line: #d3dde1;
        --brand: #14684c;
        --brand-soft: #def2ea;
        --danger: #9f2d2d;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: var(--text);
        background: radial-gradient(circle at top left, #e8f8ee 0%, var(--bg) 35%, #eef3f5 100%);
      }
      a { color: var(--brand); text-decoration: none; }
      a:hover { text-decoration: underline; }
      header {
        position: sticky;
        top: 0;
        z-index: 10;
        background: color-mix(in srgb, var(--surface) 86%, transparent);
        border-bottom: 1px solid var(--line);
        backdrop-filter: blur(6px);
      }
      .header-inner {
        max-width: 980px;
        margin: 0 auto;
        padding: 0.8rem 1rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        gap: 0.8rem;
      }
      .brand { font-weight: 700; }
      .chain {
        font-size: 0.86rem;
        color: var(--muted);
        background: var(--brand-soft);
        padding: 0.2rem 0.5rem;
        border-radius: 999px;
      }
      nav {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
      }
      main {
        max-width: 980px;
        margin: 1.2rem auto;
        padding: 0 1rem 1.5rem;
      }
      .panel {
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: 12px;
        padding: 1rem;
      }
      .stack {
        display: flex;
        flex-direction: column;
        gap: 0.55rem;
        margin-top: 1rem;
      }
      .wallet-row {
        margin: 0.75rem 0;
      }
      input, button {
        padding: 0.62rem 0.75rem;
        border-radius: 8px;
        border: 1px solid var(--line);
      }
      button {
        background: var(--brand);
        color: #fff;
        border: none;
        cursor: pointer;
      }
      button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 0.9rem;
      }
      th, td {
        border-bottom: 1px solid var(--line);
        text-align: left;
        padding: 0.65rem 0.5rem;
      }
      .msg {
        margin-top: 0.9rem;
        border-radius: 8px;
        padding: 0.65rem 0.75rem;
      }
      .ok { background: #e8f8ee; color: #155d40; }
      .err { background: #fde8e8; color: var(--danger); }
      .hint { color: var(--muted); font-size: 0.9rem; }
      .user-list {
        margin: 1rem 0 0;
        padding: 0;
        list-style: none;
        display: grid;
        gap: 0.8rem;
      }
      .user-list li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid var(--line);
        border-radius: 10px;
        padding: 0.7rem;
        gap: 0.8rem;
      }
      .actions { display: flex; gap: 0.5rem; }
      .status-grid {
        margin: 0;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 0.5rem 1rem;
      }
      .status-grid dt { font-weight: 600; }
      .status-grid dd { margin: 0; }
    </style>
  </head>
  <body>
    <header>
      <div class="header-inner">
        <div>
          <span class="brand">Turkey Coin Hub</span>
          <span class="chain">Chain: {APP_CHAIN_META.name}</span>
        </div>
        <nav>
          <a href="/">Home</a>
          <a href="/leaderboard">Leaderboard</a>
          <a href="/onboard">Onboard</a>
          <a href="/admin">Admin</a>
          <a href="/status">Status</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
